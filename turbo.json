{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:restart": {
      "dependsOn": ["^db:restart"],
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"],
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build", "^db:restart"],
      "cache": false,
      "persistent": true
    },
    "api#dev": {
      "env": ["JWT_SECRET"]
    }
  },
  "ui": "tui"
}
