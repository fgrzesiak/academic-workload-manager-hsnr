enum Role {
  TEACHER
  CONTROLLER
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  isPasswordTemporary Boolean @default(true)
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Comment     Comment[]
  
  Teacher     Teacher?
  Controller  Controller?
}